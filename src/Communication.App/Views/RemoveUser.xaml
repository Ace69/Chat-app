<UserControl x:Class="Communication.App.Views.RemoveUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Communication.App.Views"
             mc:Ignorable="d" d:DesignWidth="400" Height="102">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="123*"></ColumnDefinition>
            <ColumnDefinition Width="67*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="Odebrat" FontFamily="15" Foreground="White"  Background="#FFCA2B45" BorderBrush="Red" FontWeight="Black" ></Button>
        <TextBox x:Name="MailTextBox" Margin="0,02" materialDesign:HintAssist.Hint="Email - odebrání člena" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</UserControl>

